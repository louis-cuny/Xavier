{% extends 'layout.twig' %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('assets/css/dropzone.css') }}">
{% endblock %}
{% block body %}

    <script src="{{ asset('assets/js/dropzone.js') }}"></script>
    <script src="{{ asset('assets/js/jquery-3.3.1.min.js') }}"></script>

    <div class="container">
        <h1>{{ auth.user.username }}'s profile</h1>
        <br>

        <h2>My videos</h2>

        {% if videos %}
            {% for v in videos %}
                <div class="card">
                    <h5 class="card-header d-flex justify-content-between align-items-center">
                        {{ v.name }}

                        <div class="btn-group badge" role="group">
                            <button id="btnGroupDrop1" type="button" class="btn btn-success dropdown-toggle"
                                    data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <i class="fa fa-pencil"></i>
                            </button>

                            <div class="dropdown-menu" aria-labelledby="btnGroupDrop1">
                                <button class="dropdown-item" data-toggle="modal" data-target="#renameVideo"
                                        data-link="{{ path_for("renameVideo", {"id": v.id}) }}">Edit name
                                </button>
                                <button class="dropdown-item" data-toggle="modal" data-target="#deleteModal"
                                        data-link="{{ path_for("deleteVideo", {"id": v.id}) }}">Delete video
                                </button>
                            </div>
                        </div>

                    </h5>

                    <div class="card-body">
                        <h5 class="card-title">This video's sequences</h5>

                        {% if v.sequences %}
                            <ul class="list-group">
                                {% for seq in v.sequences %}
                                    <li class="list-group-item d-flex justify-content-between align-items-center">
                                        {{ seq.name }} : {{ seq.start }} - {{ seq.end }}
                                        <span class="badge">
                                        <button class="btn btn-success" data-toggle="modal"
                                                data-target="#renameSequenceModal"
                                                data-link="{{ path_for("renameSequence", {"id": seq.id}) }}">
                                            <i class="fa fa-pencil"></i>
                                        </button>     
                                        
                                        <a href="{{ path_for('comments', { "id": seq.id }) }}" class="btn btn-primary">
                                            <i class="fa fa-eye"></i>
                                        </a>
                                        
                                        <button class="btn btn-danger" data-toggle="modal"
                                                data-target="#deleteSequenceModal"
                                                data-link="{{ path_for("deleteSequence", {"id": seq.id}) }}">
                                            <i class="fa fa-trash"></i>
                                        </button>                                    
                                    </span>
                                    </li>
                                {% endfor %}
                            </ul>

                            <br>
                        {% else %}
                            <p class="card-text">No sequences yet</p>
                        {% endif %}

                        <a href="{{ path_for("dashboard", {"id": v.id}) }}" class="btn btn-primary">Create a
                            sequence</a>
                    </div>
                </div>

                <br>
            {% endfor %}
        {% else %}
            <p>No video uploaded yet</p>
        {% endif %}

        <br>

        <h2>Upload a new video</h2>
        <form id="upload" action="{{ path_for('upload') }}" class="dropzone" method="POST">
            {{ csrf() }}

            <div class="fallback">
                <input name="file" type="file"/>
            </div>
        </form>

        <br>

        <!-- Modal when trying to delete a video -->
        <div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel"
             aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Delete warning</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>

                    <div class="modal-body">
                        Are you sure you want to delete this video? This video, along with every sequences associated
                        will be permanently deleted.
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">No, cancel</button>
                        <a class="btn btn-danger delete-btn" href="#" style="color: white">Yes, delete</a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Modal when trying to delete a sequence -->
        <div class="modal fade" id="deleteSequenceModal" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel"
             aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Delete warning</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>

                    <div class="modal-body">
                        Are you sure you want to delete this sequence?
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">No, cancel</button>
                        <a class="btn btn-danger delete-sequence-btn" href="#" style="color: white">Yes, delete</a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Modal when trying to edit the name of a video -->
        <div class="modal fade" id="renameVideo" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel"
             aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Rename warning</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>

                    <form class="rename-form" action="" method="post">
                        {{ csrf() }}

                        <div class="modal-body">
                            How would you like to rename this video ?
                            <input class="form-control" name="newName" value="" placeholder="Your video name" required>
                        </div>

                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                            <button type="submit" class="btn btn-success rename-btn" style="color: white">Confirm
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Modal when trying to edit the name of a sequence -->
        <div class="modal fade" id="renameSequenceModal" tabindex="-1" role="dialog" aria-labelledby="renameModalLabel"
             aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Rename warning</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>

                    <form class="rename-sequence-form" action="" method="post">
                        {{ csrf() }}

                        <div class="modal-body">
                            How would you like to rename this sequence ?
                            <input class="form-control" name="newName" value="" placeholder="Your sequence name"
                                   required>
                        </div>

                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                            <button type="submit" class="btn btn-success rename-btn" style="color: white">Confirm
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <script>
          // Setting Dropzone.js options
          Dropzone.options.upload =
            {
              init: function() {
                this.on("complete", function(file) { location.reload(true) });
              },
              paramName: "file", // The name that will be used to transfer the file
              maxFilesize: 100, // MB
              acceptedFiles: 'video/*',
              maxFiles: 1
            };

          $(() => {
            $('#deleteModal').on('show.bs.modal', function (event) {
              let button = $(event.relatedTarget)
              let recipient = button.data('link')

              let modal = $(this)
              modal.find('.delete-btn').attr("href", recipient)
            });

            $('#deleteSequenceModal').on('show.bs.modal', function (event) {
              let button = $(event.relatedTarget)
              let recipient = button.data('link')

              let modal = $(this)
              modal.find('.delete-sequence-btn').attr("href", recipient)
            });

            $('#renameVideo').on('show.bs.modal', function (event) {
              let button = $(event.relatedTarget)
              let recipient = button.data('link')

              let modal = $(this)
              modal.find('.rename-form').attr("action", recipient)
            });

            $('#renameSequenceModal').on('show.bs.modal', function (event) {
              let button = $(event.relatedTarget)
              let recipient = button.data('link')

              let modal = $(this)
              modal.find('.rename-sequence-form').attr("action", recipient)
            });
          });
        </script>
    </div>

{% endblock %}
