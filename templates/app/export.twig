{% extends 'layout.twig' %}

{% block body %}

<div class="container">
    <h3 >Descriptions</h3>
    
    <form action="{{ path_for('xml') }}" method="post">
    <ul class="list-group">
        {% if sequences %}
            {% for seq in sequences %}
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    {{ seq.expression }} <input id=" {{ seq.id }}" type="checkbox" name="{{ seq.name }}">
                </li>
                    <ul>
                        {% if seq.comments %}
                            {% for com in seq.comments %}
                            <li>
                                {{ com.comment }} <input id=" {{ com.id }}" type="checkbox" name="{{ seq.id }}">
                            </li>
                            {% endfor %}
                        {% else %}
                            <li>
                                Il n'y a pas encore de commentaire
                            </li>
                        {% endif %}
                    </ul>
            {% endfor %}
        {% else %}
            <li class="list-group-item d-flex justify-content-between align-items-center">
                Il n'y a pas encore de donnée
            </li>
        {% endif %}
    </ul>    

    <br>
        
        <button type="submit" class="btn btn-lg btn-primary" style="color: white">Générer XML</button>
</form>

{% endblock %}
